<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hisp.appstore.api">
    <class name="org.hisp.appstore.api.domain.User" table="users">

        <id name="id" column="userid">
            <generator class="native" />
        </id>

        <property name="uid" />

        <property name="created" />

        <property name="lastUpdated" />

        <property name="username" not-null="true"/>

        <property name="firstName" />

        <property name="lastName" />

        <property name="email" />

        <set name="auths" table="user_auths" fetch="select" lazy="false">
            <key column="userauthid"/>
            <element type="text" column="auth"/>
        </set>

    </class>
</hibernate-mapping>