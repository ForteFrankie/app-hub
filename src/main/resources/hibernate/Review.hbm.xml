<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hisp.appstore.api">
    <class name="org.hisp.appstore.api.domain.Review" table="review">

        <id name="id" column="reviewid">
            <generator class="native" />
        </id>

        <property name="uid" />

        <property name="created" />

        <property name="lastUpdated" />

        <property name="reviewText" />

        <property name="rate" />

        <many-to-one name="user" lazy="false" class="org.hisp.appstore.api.domain.User" column="userid" foreign-key="fk_review_userid" />

        <many-to-one name="app" class="org.hisp.appstore.api.domain.App" column="appid"
                     foreign-key="fk_appreview_appid" />

    </class>
</hibernate-mapping>